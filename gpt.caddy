:80 {
  # 1) Static from vault (we WANT to strip /media here)
  handle_path /media/* {
    root * /vault
    file_server
  }

  # 2) Backend API â€” do NOT strip the prefix
  @api path /api/*
  reverse_proxy @api admin-backend:8000

  # 3) Frontend (Vite dev server)
  handle {
    reverse_proxy frontend:3000
  }

  # Image cache headers
  @images path_regexp img ^/media/arts/(previews|fullsize)/.*\.(avif|webp|jpe?g|png)$
  header @images Cache-Control "public, max-age=31536000, immutable"
}
